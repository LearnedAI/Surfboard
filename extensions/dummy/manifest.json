{
  "manifest_version": 3,
  "name": "Surfboard Test Extension",
  "version": "1.0.0",
  "description": "Dummy Chrome extension for testing Native Messaging with Surfboard",
  "permissions": [
    "nativeMessaging"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Surfboard Test"
  }
}