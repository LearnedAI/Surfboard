{
  "$defs": {
    "Viewport": {
      "description": "Browser viewport configuration.",
      "properties": {
        "width": {
          "default": 1280,
          "description": "Viewport width",
          "title": "Width",
          "type": "integer"
        },
        "height": {
          "default": 720,
          "description": "Viewport height",
          "title": "Height",
          "type": "integer"
        },
        "device_scale_factor": {
          "default": 1.0,
          "description": "Device scale factor",
          "title": "Device Scale Factor",
          "type": "number"
        },
        "mobile": {
          "default": false,
          "description": "Mobile emulation",
          "title": "Mobile",
          "type": "boolean"
        }
      },
      "title": "Viewport",
      "type": "object"
    }
  },
  "description": "Browser instance configuration.",
  "properties": {
    "headless": {
      "default": true,
      "description": "Run in headless mode",
      "title": "Headless",
      "type": "boolean"
    },
    "viewport": {
      "anyOf": [
        {
          "$ref": "#/$defs/Viewport"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "description": "Viewport settings"
    },
    "user_agent": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "description": "Custom user agent",
      "title": "User Agent"
    },
    "profile": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "description": "Browser profile name",
      "title": "Profile"
    },
    "additional_args": {
      "description": "Additional Chrome args",
      "items": {
        "type": "string"
      },
      "title": "Additional Args",
      "type": "array"
    }
  },
  "title": "BrowserConfig",
  "type": "object"
}
